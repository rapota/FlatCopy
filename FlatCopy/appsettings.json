{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {SourceContext}] [{ThreadId}] ({Scope}) {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "WithThreadId" ]
  },
  "Options": {
    "TargetFolder": "c:\\FlatCopy\\target",
    "SourceFolders": [
      "c:\\FlatCopy\\source"
    ],
    "SearchPattern": "*.*",
    "SkipExtensions": [
        ".7z",
        ".zip"
    ],
    "SkipFolders": [
        "c:\\FlatCopy\\source\\1"
    ],
    "Overwrite": "newer",
    "IsParallel": false,
    "CreateHardLinks": false
  }
}